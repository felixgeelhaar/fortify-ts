{
  "name": "@fortify-ts/middleware",
  "version": "0.1.0",
  "description": "Middleware composition chain for @fortify-ts resilience patterns",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fortify-ts/core": "workspace:*",
    "@fortify-ts/timeout": "workspace:*",
    "@fortify-ts/retry": "workspace:*",
    "@fortify-ts/circuit-breaker": "workspace:*",
    "@fortify-ts/rate-limit": "workspace:*",
    "@fortify-ts/bulkhead": "workspace:*",
    "@fortify-ts/fallback": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "keywords": [
    "middleware",
    "chain",
    "composition",
    "resilience"
  ],
  "license": "MIT"
}
