{
  "name": "@fortify-ts/bulkhead",
  "version": "0.1.2",
  "description": "Concurrency limiter bulkhead pattern for @fortify-ts",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fortify-ts/core": "workspace:*",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/felixgeelhaar/fortify-ts.git",
    "directory": "packages/bulkhead"
  },
  "keywords": [
    "bulkhead",
    "concurrency",
    "semaphore",
    "isolation",
    "resilience"
  ],
  "license": "MIT"
}
