{
  "name": "@fortify-ts/fallback",
  "version": "0.2.0",
  "description": "Fallback pattern for graceful degradation in @fortify-ts",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fortify-ts/core": "workspace:*"
  },
  "devDependencies": {
    "fast-check": "^4.5.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixgeelhaar/fortify-ts.git",
    "directory": "packages/fallback"
  },
  "homepage": "https://github.com/felixgeelhaar/fortify-ts/tree/main/packages/fallback#readme",
  "bugs": {
    "url": "https://github.com/felixgeelhaar/fortify-ts/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "fallback",
    "graceful-degradation",
    "default-value",
    "resilience"
  ],
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
