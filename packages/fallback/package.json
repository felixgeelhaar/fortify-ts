{
  "name": "@fortify-ts/fallback",
  "version": "0.1.1",
  "description": "Fallback pattern for graceful degradation in @fortify-ts",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fortify-ts/core": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixgeelhaar/fortify-ts.git",
    "directory": "packages/fallback"
  },
  "keywords": [
    "fallback",
    "graceful-degradation",
    "default-value",
    "resilience"
  ],
  "license": "MIT",
  "sideEffects": false
}
