{
  "name": "@fortify-ts/http",
  "version": "0.1.6",
  "description": "Framework-agnostic HTTP utilities for fortify-ts resilience patterns",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fortify-ts/bulkhead": "workspace:*",
    "@fortify-ts/circuit-breaker": "workspace:*",
    "@fortify-ts/core": "workspace:*",
    "@fortify-ts/fallback": "workspace:*",
    "@fortify-ts/middleware": "workspace:*",
    "@fortify-ts/rate-limit": "workspace:*",
    "@fortify-ts/retry": "workspace:*",
    "@fortify-ts/timeout": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixgeelhaar/fortify-ts.git",
    "directory": "packages/http"
  },
  "homepage": "https://github.com/felixgeelhaar/fortify-ts/tree/main/packages/http#readme",
  "bugs": {
    "url": "https://github.com/felixgeelhaar/fortify-ts/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "resilience",
    "http",
    "middleware",
    "fortify"
  ],
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
