# npm/pnpm configuration

# Generate lockfile (override global settings)
lockfile=true

# Enable provenance for npm packages (requires npm 9.5+)
provenance=true

# Public access for scoped packages
access=public

# Use exact versions when installing
save-exact=true

# pnpm-specific settings
# Hoist shared dependencies to reduce duplication and fix dependency resolution
shamefully-hoist=true
strict-peer-dependencies=false
