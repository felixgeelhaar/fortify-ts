{
  "name": "fortify-ts",
  "version": "0.0.0",
  "private": true,
  "description": "Production-grade resilience and fault-tolerance library for TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixgeelhaar/fortify-ts.git"
  },
  "license": "MIT",
  "author": "Felix Geelhaar",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "clean": "turbo clean && rm -rf node_modules",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "4.0.15",
    "eslint": "^9.39.1",
    "fast-check": "4.3.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "turbo": "^2.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20.0.0"
  }
}
